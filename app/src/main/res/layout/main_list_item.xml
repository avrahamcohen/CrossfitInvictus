<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:id="@+id/list_item" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:id="@+id/relativeLayout"
        android:background="@drawable/list_shape">

        <TextView
            android:id="@+id/applicationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/userPhoto"
            android:layout_toRightOf="@+id/userPhoto"
            android:textSize="@dimen/abc_text_size_large_material"
            android:textStyle="bold"
            android:text="Crossfit Invictus" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/applicationTitle"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/userPhoto"
            android:text="Example"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/userComment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userName"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/userPhoto"
            android:text="Example" />

        <ImageView
            android:id="@+id/userPhoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/logo"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_below="@+id/userComment"
            android:layout_alignParentEnd="false"
            android:layout_marginTop="10dp"
            android:src="@drawable/comment"
            android:background="@android:color/white"
            android:layout_marginLeft="20dp" />

        <ImageButton
            android:id="@+id/note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_below="@+id/userComment"
            android:layout_alignParentEnd="false"
            android:layout_marginTop="10dp"
            android:src="@drawable/note"
            android:background="@android:color/white"
            android:layout_marginLeft="110dp" />


        <ImageButton
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_below="@+id/userComment"
            android:layout_alignParentEnd="false"
            android:layout_marginTop="10dp"
            android:src="@drawable/share"
            android:background="@android:color/white"
            android:layout_marginLeft="180dp" />


    </RelativeLayout>

</RelativeLayout>